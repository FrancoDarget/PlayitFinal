// ARCHIVO SQL

CREATE SCHEMA `playitbd` ;

CREATE TABLE `playitbd`.`usuarios` (
  `id` INT NULL AUTO_INCREMENT,
  `name` VARCHAR(45) NOT NULL,
  `birth date` DATE NULL,
  `email` VARCHAR(45) NULL,
  `password` TEXT(5) NULL,
  PRIMARY KEY (`id`))
ENGINE = InnoDB
DEFAULT CHARACTER SET = utf8
COMMENT = 'Tabla de usuarios';

CREATE TABLE `playitbd`.`resenas` (
  `id` INT NULL AUTO_INCREMENT,
  `id pelicula` INT NULL,
  `id usuario` INT NULL,
  `resena` LONGTEXT NULL,
  `fecha creacion` DATE NULL,
  `fecha actualizacion` DATE NULL,
  `puntaje` DECIMAL(1) NULL,
  PRIMARY KEY (`id`),
  CONSTRAINT `id usuario`
    FOREIGN KEY (`id`)
    REFERENCES `playitbd`.`usuarios` (`id`)
    ON DELETE NO ACTION
    ON UPDATE NO ACTION)
ENGINE = InnoDB
DEFAULT CHARACTER SET = utf8
COMMENT = 'tabla de resenas';
